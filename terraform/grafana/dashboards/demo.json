{
  "annotations": {
    "list": []
  },
  "title": "FastAPI Monitoring Dashboard",
  "uid": "fastapi-metrics",
  "version": 1,
  "panels": [
    {
      "title": "Total HTTP Requests",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "Total Requests",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Request Errors (4xx & 5xx)",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~'4..|5..'}[5m]))",
          "legendFormat": "Errors",
          "refId": "B"
        }
      ]
    },
    {
      "title": "CPU Usage (per container)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace='ns-website-db', container!='POD'}[5m])",
          "legendFormat": "{{ container }}",
          "refId": "C"
        }
      ],
      "xaxis": { "mode": "time" }
    },
    {
      "title": "Memory Usage (per container)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{namespace='ns-website-db', container!='POD'}",
          "legendFormat": "{{ container }}",
          "refId": "D"
        }
      ],
      "xaxis": { "mode": "time" }
    },
    {
      "title": "Request Latency",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_request_latency_seconds_sum[5m]) / rate(http_request_latency_seconds_count[5m])",
          "legendFormat": "Latency (s)",
          "refId": "E"
        }
      ],
      "xaxis": { "mode": "time" }
    }
  ]
}
